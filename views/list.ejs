<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <div class="list">
      <% newListItems.items.forEach(item => { %>
        <form action="/delete" method="post">
          <div class="item">
          <input type="checkbox" name="check" value="<%=  item._id  %>@<%=  listTitle  %>" onchange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div>
      </form>
      <% }) %>
    </div>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
